@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_AngularLayout.cshtml";
}
@Scripts.Render("~/bundles/angular")
<div ng-app>
    
<label>Name: </label>
<input type="text" ng-model="yourName" placeholder="Enter a name" value="Nathan"/>

<h2>Hello {{yourName}}, welcome to AngularJS!</h2>

<hr />

<script type="text/javascript">
    function TodoCtrl(scope) {
        scope.totalTodos = 2;

        scope.todos = [
            { text: "Wake up", done: false },
            { text: "Be awesome", done: false }
        ];
    }

</script>

<div ng-controllers="TodoCtrl">
    <h2>Total todos: {{totalTodos}}</h2>
    <ul>
        <li ng-repeat="todo in todos">
            {{todo.text}}
        </li>
    </ul>

</div>
</div>